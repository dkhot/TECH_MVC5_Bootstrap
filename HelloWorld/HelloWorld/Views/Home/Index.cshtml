
<h2>Index</h2>
@using (var f = Html.Bootstrap().Begin(new Form().LabelWidthMd(2).LabelWidthSm(3).Type(FormType.Horizontal)))
{
    using (var p = Html.Bootstrap().Begin(new Panel()))
    {
        @p.Heading("My cool header")

        using (p.BeginBody())
        {
            @f.FormGroup().TextBox("Email");
    @f.FormGroup().TextBox("Password")
    @f.FormGroup().CheckBox("Remeber")
    @f.FormGroup().DropDownList("My Name", (SelectList)ViewBag.EmplListDropDown)

    @f.FormGroup().CustomControls(Html.Bootstrap().Button().Class("btn btn-pink").Text("Open Modal").TriggerModal("modalId"))
    @f.FormGroup().CustomControls(Html.Bootstrap().SubmitButton())
        }
        <div class="row-fluid">
            <h3 class="header smaller lighter blue">My Grid</h3>
            <div class="table-header">
                Results
            </div>

            @using (var t = p.BeginTable(new Table().Id("sample-table-2").Class("table table-striped table-bordered table-hover")))
            {
            }
        </div>
        @p.Footer("My cool footer")
    }


    using (var popUp = Html.Bootstrap().Begin(new Modal().Id("modalId").Closeable().BackdropOff()))
    {
        @popUp.Header("Modal Header!")
        using (popUp.BeginBody())
        {
            <p>Body of the Modal.</p>
            <p>This could be any html markup.</p>
        }
        using (popUp.BeginFooter())
        {
            @Html.Bootstrap().Button()
        }
    }

}



